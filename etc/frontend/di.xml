<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Paypal\Block\Express\Review">
        <plugin name="Calcurates_ModuleMagento::AddDeliveryDateInfo" type="Calcurates\ModuleMagento\Plugin\Block\Paypal\Express\ReviewPlugin"/>
    </type>

    <!-- Remove store pickup selector if disabled -->
    <type name="Magento\Checkout\Block\Onepage">
        <arguments>
            <argument name="layoutProcessors" xsi:type="array">
                <item name="calcuratesDisableStorePickupSelector" xsi:type="object">Calcurates\ModuleMagento\Block\Checkout\Onepage\CheckoutLayoutProcessor</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Calcurates\ModuleMagento\Model\Request\DataPersistor" type="Magento\Framework\App\Request\DataPersistor">
        <arguments>
            <argument name="session" xsi:type="object">Magento\Checkout\Model\Session</argument>
        </arguments>
    </virtualType>
    <type name="Calcurates\ModuleMagento\Model\Shipment\CarriersSettingsProvider">
        <arguments>
            <argument name="dataPersistor" xsi:type="object">Calcurates\ModuleMagento\Model\Request\DataPersistor</argument>
        </arguments>
    </type>
    <type name="Calcurates\ModuleMagento\Plugin\Block\Adminhtml\Order\PackagingPlugin">
        <arguments>
            <argument name="dataPersistor" xsi:type="object">Calcurates\ModuleMagento\Model\Request\DataPersistor</argument>
        </arguments>
    </type>
</config>
