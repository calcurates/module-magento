<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="sales.order.info" template="Calcurates_ModuleMagento::order/info.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">Calcurates\ModuleMagento\ViewModel\OrderSplitShipments</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="calcurates.delivery_date"
                   template="Calcurates_ModuleMagento::order/delivery_date.phtml"
                   after="sales.order.info">
                <arguments>
                    <argument name="view_model" xsi:type="object">Calcurates\ModuleMagento\ViewModel\OrderDeliveryDate</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
